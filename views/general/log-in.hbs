<section id="login">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form action="/log-in" method="post">
        {{#each userError}}
            <br> <span style="color: red;"> *{{this}}</span><br />
            {{/each}}
          <div class="form-outline text-center text-lg-start">
            {{!-- <input type="radio" id="form3Example3" name="type" value="data_clerk">Data Clerk</input>
            <input type="radio" id="form3Example3" name="type" value="customer">Customer</input>
            <label class="form-label" for="form3Example3"></label> --}}
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="exampleRadios1" value="clerk"
                checked>
              <label class="form-check-label" for="exampleRadios1">
                Clerk
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="exampleRadios2" value="customer">
              <label class="form-check-label" for="exampleRadios2">
                Customer
              </label>
            </div>
          </div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="text" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter a valid email address" name="Email" value="{{values.Email}}" />
            <label class="form-label" for="form3Example3">Email address</label>
            {{#if validationMessages.Email}}
            <br> <span style="color: red;"> *{{validationMessages.Email}}</span><br />
            {{/if}}
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" id="form3Example4" class="form-control form-control-lg" placeholder="Enter password"
              name="Password" value="{{values.Password}}" />
            <label class="form-label" for="form3Example4">Password</label>
            {{#if validationMessages.Password}}
            <br><span style="color: red;"> *{{validationMessages.Password}}</span><br />
            {{/if}}
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/sign-up"
                class="link-danger">Register</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>

</section>